<svg xmlns="http://www.w3.org/2000/svg" width="800" height="600" viewBox="0 0 800 600">
  <defs>
    <linearGradient id="goldGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#FFD700"/>
      <stop offset="50%" stop-color="#FFA500"/>
      <stop offset="100%" stop-color="#CD853F"/>
    </linearGradient>
    <radialGradient id="bgGradient" cx="50%" cy="50%" r="50%" fx="50%" fy="50%">
      <stop offset="0%" stop-color="#0A0A1A"/>
      <stop offset="100%" stop-color="#050510"/>
    </radialGradient>
    <filter id="glow" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur stdDeviation="10" result="blur"/>
      <feComposite in="SourceGraphic" in2="blur" operator="over"/>
    </filter>
  </defs>
  <rect width="800" height="600" fill="url(#bgGradient)"/>
  <!-- Deity figure using simplified paths -->
  <g transform="translate(400, 300) scale(0.8)">
    <!-- Robe and body -->
    <path d="M0,0 C-150,-200 -250,50 -100,200 C-50,300 50,300 100,200 C250,50 150,-200 0,0 Z" fill="#000000" stroke="url(#goldGradient)" stroke-width="5"/>
    <!-- Head -->
    <circle cx="0" cy="-150" r="60" fill="#000000" stroke="url(#goldGradient)" stroke-width="5"/>
    <!-- Crown -->
    <path d="M-40,-190 L-20,-230 L0,-200 L20,-230 L40,-190 M-30,-210 L30,-210" stroke="url(#goldGradient)" stroke-width="4" fill="none"/>
    <!-- Beard -->
    <path d="M0,-90 C-30,-90 -30,-130 0,-150 C30,-130 30,-90 0,-90 Z" fill="url(#goldGradient)"/>
    <!-- Eyes and eyebrows -->
    <path d="M-20,-160 L-10,-155 M10,-155 L20,-160 M-25,-140 L-15,-140 M15,-140 L25,-140" stroke="#FFFFFF" stroke-width="3"/>
    <!-- Hands and coins -->
    <circle cx="-100" cy="50" r="20" fill="#000000" stroke="url(#goldGradient)" stroke-width="3"/>
    <circle cx="100" cy="100" r="20" fill="#000000" stroke="url(#goldGradient)" stroke-width="3"/>
    <!-- Coins -->
    <circle cx="-150" cy="30" r="10" fill="url(#goldGradient)" filter="url(#glow)"/>
    <circle cx="-180" cy="-20" r="8" fill="url(#goldGradient)" filter="url(#glow)"/>
    <circle cx="-120" cy="-40" r="12" fill="url(#goldGradient)" filter="url(#glow)"/>
    <circle cx="150" cy="120" r="10" fill="url(#goldGradient)" filter="url(#glow)"/>
    <circle cx="180" cy="80" r="8" fill="url(#goldGradient)" filter="url(#glow)"/>
    <circle cx="120" cy="150" r="12" fill="url(#goldGradient)" filter="url(#glow)"/>
    <circle cx="50" cy="-50" r="9" fill="url(#goldGradient)" filter="url(#glow)"/>
    <circle cx="-50" cy="-30" r="7" fill="url(#goldGradient)" filter="url(#glow)"/>
    <!-- Light beam -->
    <path d="M0,-50 L150,150" stroke="url(#goldGradient)" stroke-width="5" stroke-linecap="round" filter="url(#glow)"/>
  </g>
</svg>